<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:columnCount="2"
    android:gravity="center"
    android:padding="16dp">

    <Space
        android:layout_width="141dp"
        android:layout_height="133dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/global_information"
        android:textSize="22sp"
        android:textColor="@color/red"
        android:layout_columnSpan="2"
        android:layout_marginBottom="20dp" />

    <Space
        android:layout_width="125dp"
        android:layout_height="52dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/Start"
        android:textColor="@color/black"/>
    <AutoCompleteTextView
        android:id="@+id/editDepart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Ville de départ"
        android:completionThreshold="1" />

    <TextView android:text="@string/End"
        android:textColor="@color/black"/>
    <AutoCompleteTextView
        android:id="@+id/editArrivee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Ville d'arrivé"
        android:completionThreshold="1" />

    <Space
        android:layout_width="50dp"
        android:layout_height="69dp" />

    <Button
        android:id="@+id/btnValider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="onValiderClick"
        android:text="@string/Valider" />

</GridLayout>